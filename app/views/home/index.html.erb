<div class="homepage">
  <header class="header bg-white shadow-sm">
    <div class="container mx-auto px-4 py-4 flex items-center justify-between">
      <div class="logo">
        <%= link_to root_path, class: "text-2xl font-bold text-gray-800" do %>
          BookLocal
        <% end %>
      </div>
      
      <nav class="navigation hidden md:flex space-x-8" role="navigation">
        <%= link_to "#about", class: "text-gray-600 hover:text-gray-900 transition-colors" do %>
          <span class="header-text">About</span>
        <% end %>
        <%= link_to "#listings", class: "text-gray-600 hover:text-gray-900 transition-colors" do %>
          <span class="text-wrapper">Listings</span>
        <% end %>
        <%= link_to "#contact", class: "text-gray-600 hover:text-gray-900 transition-colors" do %>
          <span class="header-text">Contact</span>
        <% end %>
      </nav>
      
      <div class="flex items-center space-x-4">
        <div class="language-selector hidden md:block">
          <button class="px-3 py-1 text-sm text-gray-600 hover:text-gray-900 transition-colors" type="button" aria-label="Select Language">
            Language
          </button>
        </div>
        
        <div class="user-icon">
          <button type="button" aria-label="User Account" class="flex items-center text-gray-600 hover:text-gray-900 transition-colors">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
            <span class="ml-2 hidden md:inline">Account</span>
          </button>
        </div>
      </div>
    </div>
  </header>

  <main>
    <section class="find-your-corner py-16 lg:py-24" aria-labelledby="hero-title">
      <div class="container mx-auto px-4">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div class="frame-picture order-2 lg:order-1">
            <div class="picture rounded-lg overflow-hidden shadow-lg">
              <%= image_tag "cabin-in-the-woods.jpg", 
                           class: "w-full h-64 lg:h-80 object-cover",
                           alt: "Beautiful local accommodation" %>
            </div>
          </div>
          
          <div class="frame-text order-1 lg:order-2">
            <div class="title mb-6">
              <h1 id="hero-title" class="text-4xl lg:text-5xl font-bold text-gray-900 leading-tight">
                Find Your Perfect Local Stay
              </h1>
            </div>
            
            <div class="paragraph mb-8">
              <p class="text-lg text-gray-600 leading-relaxed">
                Discover unique accommodations in your area. From cozy cabins to modern apartments, 
                find the perfect place for your next getaway. Book directly with local hosts for 
                authentic experiences.
              </p>
            </div>
            
            <button class="bg-blue-600 text-white px-8 py-3 rounded-lg font-medium hover:bg-blue-700 transition-colors" type="button">
              <span class="button-text">Learn more</span>
            </button>
          </div>
        </div>
      </div>
    </section>

    <div class="border-t border-gray-200" role="separator" aria-hidden="true"></div>

    <section id="listings" class="cards py-16" aria-label="Featured Local Accommodations">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center text-gray-900 mb-12">Popular Listings</h2>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
          <div class="picture-homepage bg-gray-200 h-64 rounded-lg shadow-md flex items-center justify-center" role="img" aria-label="Local accommodation 1">
            <span class="text-gray-500">Property Image 1</span>
          </div>
          
          <div class="picture-homepage bg-gray-200 h-64 rounded-lg shadow-md flex items-center justify-center" role="img" aria-label="Local accommodation 2">
            <span class="text-gray-500">Property Image 2</span>
          </div>
          
          <div class="picture-homepage bg-gray-200 h-64 rounded-lg shadow-md flex items-center justify-center" role="img" aria-label="Local accommodation 3">
            <span class="text-gray-500">Property Image 3</span>
          </div>
          
          <div class="picture-homepage bg-gray-200 h-64 rounded-lg shadow-md flex items-center justify-center" role="img" aria-label="Local accommodation 4">
            <span class="text-gray-500">Property Image 4</span>
          </div>
        </div>
      </div>
    </section>

    <div class="border-t border-gray-200" role="separator" aria-hidden="true"></div>

    <section class="always-first py-16 bg-blue-50" aria-labelledby="always-first-title">
      <div class="container mx-auto px-4 text-center">
        <div class="max-w-2xl mx-auto">
          <h2 id="always-first-title" class="text-3xl font-bold text-gray-900 mb-8">Always First</h2>
          
          <div class="bullet-points mb-8">
            <ul class="text-lg text-gray-600 space-y-2">
              <li>Direct booking with local hosts</li>
              <li>No hidden fees or commissions</li>
              <li>Verified properties and reviews</li>
              <li>24/7 customer support</li>
            </ul>
          </div>
          
          <button class="bg-blue-600 text-white px-8 py-3 rounded-lg font-medium hover:bg-blue-700 transition-colors" type="button">
            <span class="button-text">Subscribe Now</span>
          </button>
        </div>
      </div>
    </section>

    <section class="FAQ py-16" aria-labelledby="faq-title">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto">
          <h2 id="faq-title" class="text-3xl font-bold text-center text-gray-900 mb-12">FAQ's</h2>
          
          <div class="space-y-4">
            <div class="accordion-item bg-white rounded-lg shadow-sm">
              <button class="w-full px-6 py-4 text-left flex justify-between items-center hover:bg-gray-50 transition-colors" 
                      type="button" aria-expanded="false" onclick="toggleAccordion(this)">
                <span class="font-medium text-gray-900">Question</span>
                <span class="text-gray-400 text-xl">+</span>
              </button>
              <div class="accordion-content px-6 pb-4 hidden">
                <p class="text-gray-600">Answer content goes here.</p>
              </div>
            </div>
            
            <div class="accordion-item bg-white rounded-lg shadow-sm">
              <button class="w-full px-6 py-4 text-left flex justify-between items-center hover:bg-gray-50 transition-colors" 
                      type="button" aria-expanded="false" onclick="toggleAccordion(this)">
                <span class="font-medium text-gray-900">Question</span>
                <span class="text-gray-400 text-xl">+</span>
              </button>
              <div class="accordion-content px-6 pb-4 hidden">
                <p class="text-gray-600">Answer content goes here.</p>
              </div>
            </div>
            
            <div class="accordion-item bg-white rounded-lg shadow-sm">
              <button class="w-full px-6 py-4 text-left flex justify-between items-center hover:bg-gray-50 transition-colors" 
                      type="button" aria-expanded="false" onclick="toggleAccordion(this)">
                <span class="font-medium text-gray-900">Question</span>
                <span class="text-gray-400 text-xl">+</span>
              </button>
              <div class="accordion-content px-6 pb-4 hidden">
                <p class="text-gray-600">Answer content goes here.</p>
              </div>
            </div>
            
            <div class="accordion-item bg-white rounded-lg shadow-sm">
              <button class="w-full px-6 py-4 text-left flex justify-between items-center hover:bg-gray-50 transition-colors" 
                      type="button" aria-expanded="false" onclick="toggleAccordion(this)">
                <span class="font-medium text-gray-900">Question</span>
                <span class="text-gray-400 text-xl">+</span>
              </button>
              <div class="accordion-content px-6 pb-4 hidden">
                <p class="text-gray-600">Answer content goes here.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <footer class="footer bg-gray-900 text-white py-12">
    <div class="container mx-auto px-4">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="rights mb-4 md:mb-0">
          <p class="text-gray-400">All Rights Reserved © 2025 BookLocal</p>
        </div>
        
        <nav class="footer-nav flex space-x-6" role="navigation">
          <%= link_to "#home", class: "text-gray-400 hover:text-white transition-colors" do %>
            <span>Home</span>
          <% end %>
          <%= link_to "#terms", class: "text-gray-400 hover:text-white transition-colors" do %>
            <span>Terms & Conditions</span>
          <% end %>
          <%= link_to "#privacy", class: "text-gray-400 hover:text-white transition-colors" do %>
            <span>Privacy</span>
          <% end %>
          <%= link_to "#contact", class: "text-gray-400 hover:text-white transition-colors" do %>
            <span>Contact Us</span>
          <% end %>
        </nav>
      </div>
    </div>
  </footer>
</div>

<script>
function toggleAccordion(button) {
  const content = button.nextElementSibling;
  const icon = button.querySelector('span:last-child');
  
  if (content.classList.contains('hidden')) {
    content.classList.remove('hidden');
    button.setAttribute('aria-expanded', 'true');
    icon.textContent = '−';
  } else {
    content.classList.add('hidden');
    button.setAttribute('aria-expanded', 'false');
    icon.textContent = '+';
  }
}
</script>